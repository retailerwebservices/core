<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>HelloAppEngine</servlet-name>
		<servlet-class>org.jimmutable.app_engine_example.HelloAppEngine</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoggingExample</servlet-name>
		<servlet-class>org.jimmutable.app_engine_example.LoggingExample</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SearchIndexExample</servlet-name>
		<servlet-class>org.jimmutable.app_engine_example.SearchIndexExample</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>IndexManagerExample</servlet-name>
		<servlet-class>org.jimmutable.app_engine_example.IndexManagerExample</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SearchExample</servlet-name>
		<servlet-class>org.jimmutable.app_engine_example.SearchExample</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GcsExample</servlet-name>
		<servlet-class>org.jimmutable.app_engine_example.GcsExampleServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TestPS</servlet-name>
		<servlet-class>org.jimmutable.app_engine_example.TestPS</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>HelloAppEngine</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoggingExample</servlet-name>
		<url-pattern>/logging</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchIndexExample</servlet-name>
		<url-pattern>/searchIndex</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IndexManagerExample</servlet-name>
		<url-pattern>/indexManager</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchExample</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GcsExample</servlet-name>
		<url-pattern>/gcs/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TestPS</servlet-name>
		<url-pattern>/testps</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
